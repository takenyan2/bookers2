

<div class="container">
  <div class="row">
    <div class="col-sm-4">
     <%= render "users/list", user: @user, book: @book %>
    </div>
    <div class="col-sm-8">
	<h2>Users</h2>
	<table class="table table-striped">
		<tr>
			<th>画像</th>
			<th>名前</th>
			<th>感想</th>
			<th>詳細</th>
		</tr>
	<% @users.each do |user|%>
		<tr>
			<td>
				<%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
			</td>
			<td>
				<%= user.name %>
			</td>
			<td>
				<%= link_to "詳細", user_path(user), class: "user_#{user.id}" %>
			</td>
		</tr>
   	<% end %>
 	</table>
   </div>
 </div>
</div>