   <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
<div class="container">
  <div class="row">
    <div class="col-sm-4">
     <%= render "users/list", user: @user, book: @book %>
    </div>
    <div class="col-sm-8">
		<h1>Users</h1>

	<table class="table table-striped">
		<tr>
			<th>画像</th>
			<th>名前</th>
			<th>感想</th>
		</tr>
	  <% @books.each do |book|%>
		<tr>
			<td>
				<%= attachment_image_tag @user, :image, :fill, 50, 50, format: 'jpeg' %>
			</td>
			<td>
				<%= link_to book.title, book_path(book), class: "book_#{book.id}" %>
			</td>
			<td>
				<%= book.opinion %>
			</td>
		</tr>
	  <% end %>
	</table>

      
    </div>
  </div>
</div>