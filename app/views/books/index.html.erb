
	<% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
      	<%= @book.errors.count %>error
        <ul>
          <% @book.errors.full_messages.each do |message| %>
        <li>  <%= message %>  </li>
          <% end %>
        </ul>
      </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
     <%= render "users/list", user: @user, book: @book %>
    </div>
    <div class="col-sm-8">
		<h2>Books</h2>
	<table class="table table-striped">
		<tr>
			<th>画像</th>
			<th>名前</th>
			<th>感想</th>
			<th>詳細</th>
		</tr>
	<% @books.each do |book|%>
		<tr>
			<td>
				<%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
			</td>
			<td>
				<%= link_to book.title, book_path(book.id), class: "book_#{book.id}"%>
			</td>
			<td>
				<%= book.opinion %>
			</td>
		</tr>
	<% end %>
	</table>
   </div>
 </div>
</div>