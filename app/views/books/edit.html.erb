

<div class="top-pgae">
 <div class="top-text" >
	<h1><strong>投稿の編集</strong></h1>

	<% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
      	<%= @book.errors.count %>error
        <ul>
          <% @book.errors.full_messages.each do |message| %>
        <li>  <%= message %>  </li>
          <% end %>
        </ul>
      </div>
  <% end %>
  
    <%= form_for(@book) do |f| %>

		<p>タイトル</p>
			<%= f.text_field :title, class: "book_title" %>
		<p>感想</p>
			<%= f.text_area :opinion, class: "book_body"%>
			<p><%= f.submit "保存する", class: "book_submit" %></p>
	<% end %>
			<%= link_to "詳細", user_path(@book.user), class: "user_#{@book.user_id}" %>
		<span>|</span>
			<%= link_to "戻る", books_path, class: "back" %>
	</div>
 </div>
</div>
